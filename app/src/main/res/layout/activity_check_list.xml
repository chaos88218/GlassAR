<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="com.example.miles.glassar.CheckListActivity"
android:orientation="horizontal">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout3"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skull Model"
        android:id="@+id/skull_check_text"
        android:textColor="#ff000d"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maxilla Model"
        android:id="@+id/maxi_check_text"
        android:textColor="#ff000d"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mandible Model"
        android:id="@+id/mand_check_text"
        android:textColor="#ff000d"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maxilla OS Plane"
        android:id="@+id/osp1_check_text"
        android:textColor="#ff000d"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mandible OS Plane"
        android:id="@+id/osp2_check_text"
        android:textColor="#ff000d"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N-Art Project"
        android:id="@+id/project_check_text"
        android:textColor="#ff000d"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AR Marker Points"
        android:id="@+id/ar_check_text"
        android:textColor="#ff000d"
        android:textSize="18dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See through calibration"
            android:id="@+id/stc_radButton"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:checked="false"
            android:textColor="#ff0000"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ARToolkit calibration"
            android:id="@+id/arc_radButton"
            android:checked="false"
            android:textColor="#ff0000"/>
    </RadioGroup>

</LinearLayout>

<Button
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:text="Launch"
    android:id="@+id/launch_button"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"/>

</RelativeLayout>
